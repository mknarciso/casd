<script>
  $(document).ready(function() {
  $('#candidateFormsTable').DataTable();
});
</script>

<h1>Listando Pesquisas | <%= link_to "Selecionar Colunas", pesquisas_selection_path , role: "button", class: "btn btn-default"  %></h1>

<table id="candidateFormsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Automóveis</th>
      <th>Televisão</th>
      <th>Computadores</th>
      <th>Máquina de Lavar</th>
      <th>Geladeiras</th>
      <th>Aparelho de rádio</th>
      <th>Banheiros</th>
      <th>Empregados</th>
      <th>Nível Instrução do Chefe de Família</th>
      <th>Cidade</th>
      <th>Habitação</th>
      <th>Transporte</th>
      <th>Participação na renda familiar</th>
      <th>Worktype</th>
      <th>Individualmonthlyincome</th>
      <th>Howdoyouknowcasd</th>
      <th>Ishighschoolstudent</th>
      <th>Hasstudiedcasd</th>
      <th>Relativeincasd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pesquisas.each do |pesquisa| %>
      <tr>
        <td><%= pesquisa.automovel %></td>
        <td><%= pesquisa.television %></td>
        <td><%= pesquisa.computers %></td>
        <td><%= pesquisa.washingMachines %></td>
        <td><%= pesquisa.fridge %></td>
        <td><%= pesquisa.radio %></td>
        <td><%= pesquisa.bathrooms %></td>
        <td><%= pesquisa.employees %></td>
        <td><%= pesquisa.householderInstructionLevel %></td>
        <td><%= pesquisa.city %></td>
        <td><%= pesquisa.houseType %></td>
        <td><%= pesquisa.transport %></td>
        <td><%= pesquisa.familyIncomeParticipation %></td>
        <td><%= pesquisa.workType %></td>
        <td><%= pesquisa.individualMonthlyIncome %></td>
        <td><%= pesquisa.howDoYouKnowCASD %></td>
        <td><%= pesquisa.isHighSchoolStudent %></td>
        <td><%= pesquisa.hasStudiedCASD %></td>
        <td><%= pesquisa.relativeInCASD %></td>
        <td><%= link_to 'Show', pesquisa, role: "button", class: "btn btn-primary btn-xs"  %></td>
        <td><%= link_to 'Edit', edit_pesquisa_path(pesquisa), role: "button", class: "btn btn-info btn-xs"  %></td>
        <td><%= link_to 'Destroy', pesquisa, method: :delete, data: { confirm: 'Are you sure?' }, role: "button", class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

