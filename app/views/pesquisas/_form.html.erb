<%= form_for(@pesquisa) do |f| %>
  <% if @pesquisa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pesquisa.errors.count, "error") %> prohibited this pesquisa from being saved:</h2>

      <ul>
      <% @pesquisa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Quantos automóveis sua família possui?" %><br>
    <%= f.select :automovel, options_for_select(0..5) %>
  </div>
  <div class="field">
    <%= f.label "Quantas televisões há na sua casa?" %><br>
    <%= f.select :television, options_for_select(0..5)%>
  </div>
  <div class="field">
    <%= f.label "Quantos computadores há na sua casa?" %><br>
    <%= f.select :computers, options_for_select(0..5)%>
  </div>
  <div class="field">
    <%= f.label "Quantas máquinas de lavar há na sua casa?" %><br>
    <%= f.select :washingMachines, options_for_select(0..5) %>
  </div>
  <div class="field">
    <%= f.label "Quantas geladeiras há na sua casa?" %><br>
    <%= f.select:fridge, options_for_select(0..5) %>
  </div>
  <div class="field">
    <%= f.label "Quantos aparelhos de rádio há na sua casa?" %><br>
    <%= f.select :radio, options_for_select(0..5) %>
  </div>
  <div class="field">
    <%= f.label "Quantos banheiros há na sua casa?" %><br>
    <%= f.select :bathrooms, options_for_select(0..5)  %>
  </div>
  <div class="field">
    <%= f.label "Quantos empregados tem sua família?" %><br>
    <%= f.select :employees, options_for_select(0..5)  %>
  </div>
  <div class="field">
    <%= f.label "Qual o nível de instrução do chefe de família?" %><br>
    <%= f.select :householderInstructionLevel, ["Fundamental 1","Fundamental 2", "Ensino Médio","Ensino Superior"]  %>
  </div>
  <div class="field">
    <%= f.label "Em que cidade você mora?"  %><br>
    <%= f.text_field :city, :required => true %>
  </div>
  <div class="field">
    <%= f.label "Onde e como mora atualmente?" %><br>
    <%= f.select :houseType, ["Em casa ou apartamento mantido pela família","Em casa ou apartamento sozinho","Em casa de amigos","Em habitação coletiva","Outra"] %>
  </div>
  <div class="field">
    <%= f.label "Como se locomove para o CESD?" %><br>
    <%= f.select :transport, ["A pé, carona ou bicicleta","Transporte coletivo","Carro próprio","Moto própria"] %>
  </div>
  <div class="field">
    <%= f.label "Qual sua participação na renda familiar?" %><br>
    <%= f.select :familyIncomeParticipation, ["Sem trabalho, gastos custeados","Trabalho com independência financeira","Trabalho sem independência financeira","Trabalho sustentando a família"] %>
  </div>
  <div class="field">
    <%= f.label "Caso você desenvolva alguma atividade remunerada, qual é o vínculo?" %><br>
    <%= f.select :workType, ["Estágio","Emprego fixo","Emprego autônomo","Não desenvolvo atividade remunerada"] %>
  </div>
  <div class="field">
    <%= f.label "Qual sua renda mensal individual?" %><br>
    <%= f.select :individualMonthlyIncome, ["Até 1 salário mínimo","De 2 a 3 salários mínimos","De 3 a 4 salários mínimos","Mais de 4 salários mínimos"] %>
  </div>
  <div class="field">
    <%= f.label "Como você conheceu o Centro Educacional Santos Dummont?" %><br>
    <%= f.select :howDoYouKnowCASD, ["Alunos ou ex-alunos","Meios de comunicação","Visita na sua escola","Outros tipos de divulgação na escola", "Outros"] %>
  </div>
  <div class="field">
    <%= f.label "Você está no ensino médio?" %><br>
    <%= f.select :isHighSchoolStudent, ["Sim, 1º ano", "Sim, 2º ano", "Sim, 3º ano","Não"] %>
  </div>
  <div class="field">
    <%= f.label "Você já estudou no Centro Educacional Santos Dummont?" %><br>
    <%= f.radio_button :hasStudiedCASD, true %> Sim
    <%= f.radio_button :hasStudiedCASD, false, :checked => true %> Não
  </div>
  <div class="field">
    <%= f.label "Você tem parentes estudando no Centro Educacional Santos Dummont?" %><br>
    <%= f.radio_button :relativeInCASD, true %> Sim
    <%= f.radio_button :relativeInCASD, false, :checked => true  %> Não
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
