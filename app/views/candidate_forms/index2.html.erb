});
</script>

<h1>Listando Formul√°rios dos Candidatos | <%= link_to "Selecionar Colunas", candidate_forms_selection_path %></h1>

<table id="candidateFormsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <% @columns.each do |s| %>
        <th><%= s.camelcase %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidate_forms.each do |candidate_form| %>
      <tr>
        <% @columns.each do |s| %>
          <td><%= candidate_form[s.to_sym] %></td>
        <% end %>
        <td><%= link_to 'Show', candidate_form %></td>
        <td><%= link_to 'Edit', edit_candidate_forms_path(candidate_form) %></td>
        <td><%= link_to 'Destroy', candidate_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

