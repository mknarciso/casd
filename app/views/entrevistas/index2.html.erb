<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script>
  $(document).ready(function() {
  $('#entrevistasTable').DataTable();
});
</script>

<h1>Listando Entrevistas | <%= link_to "Selecionar Colunas", entrevistas_selection_path , role: "button", class: "btn btn-default"  %></h1>

<table id="entrevistasTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <% @columns.each do |s| %>
        <th><%= s.camelcase %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entrevistas.each do |entrevista| %>
      <tr>
        <% @columns.each do |s| %>
          <td><%= entrevista[s.to_sym] %></td>
        <% end %>
        <td><%= link_to 'Show', entrevista, role: "button", class: "btn btn-primary btn-xs"  %></td>
        <td><%= link_to 'Edit', edit_entrevista_path(entrevista), role: "button", class: "btn btn-info btn-xs"  %></td>
        <td><%= link_to 'Destroy', entrevista, method: :delete, data: { confirm: 'Are you sure?' }, role: "button", class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

